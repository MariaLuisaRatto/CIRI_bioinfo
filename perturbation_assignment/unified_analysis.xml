<?xml version="1.0" encoding="UTF-8"?>
<tool id="unified_analysis" name="unified_analysis">
  <description>Unified CIRI workflow for Single and Dual guide analysis</description>
  <requirements>
    <container type="docker">docker.io/hedgelab/ciri_analysis</container>
  </requirements>
  <command><![CDATA[Rscript /scripts/CIRI_unified.R /data $mode]]></command>
  <inputs>
    <param type="data_collection" name="scripts_dir" value="&lt;nil&gt;">
      <label>Host directory containing the R scripts</label>
    </param>
    <param type="data_collection" name="data_dir" value="&lt;nil&gt;">
      <label>Host directory containing the input data</label>
    </param>
    <param type="select" name="mode" value="1">
      <option value="1">1</option>
      <option value="2">2</option>
      <label>Analysis Mode: 1=Single Guide, 2=Dual Guide</label>
    </param>
  </inputs>
  <outputs></outputs>
</tool>